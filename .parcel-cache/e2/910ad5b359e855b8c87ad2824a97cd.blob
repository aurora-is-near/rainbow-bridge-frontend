* {
  box-sizing: border-box;
}

html, body {
  height: 100%;
}

:root {
  --white: white;
  --black: #111618;
  --gray: #79726C;
  --red: #FF585D;
  --yellow: #E78513;
  --blue: #0072CE;
  --purple: #627EEA;
  --green: rgb(85, 188, 143);
  --bg: var(--white);
  --fg: var(--gray);
  --fg-bold: var(--black);
  --light-gray: #f0f0f0;
  --shadow: #fafafa;
  --error: #FF585D;
  --success: var(--green);
  --primary: var(--blue);
  --secondary: var(--red);

  --space: 1em;

  --monospace: "Source Code Pro",monospace;
}

html {
  background-color: var(--bg);
  color: var(--fg);
  font-family: Inter,system-ui,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
  font-weight: 400;
  font-variant: slashed-zero;
  font-size: 16px;
  line-height: 1.3;
}

@media (min-width: 1200px) {
  html { font-size: 18px; }
}

body {
  margin: 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 900;
  line-height: 1;
  color: var(--fg-bold);
}

p {
  margin: 0 0 1em;
}

img, picture {
  display: block;
}

a,
.link {
  color: var(--primary);
  text-decoration: none;
  padding: 0;
}
a:hover,
a:focus,
.link:hover,
.link:focus {
  text-decoration: underline;
}
a:active,
.link:active {
  color: var(--secondary);
}

strong {
  color: var(--fg-bold);
  font-weight: 900;
}

label {
  display: block;
}

button, input, select {
  color: var(--fg-bold);
  font: inherit;
  outline: none;
}

button {
  background-color: var(--fg-bold);
  border-radius: 0.5em;
  border: none;
  color: var(--bg);
  font-weight: 500;
  cursor: pointer;
  padding: 0.3em 0.75em;
  transition: transform 30ms;
}
button:hover, button:focus {
  box-shadow: 0 0 10em rgba(255, 255, 255, 0.2) inset;
}
button:active {
  box-shadow: 0 0 10em rgba(0, 0, 0, 0.1) inset;
}
button.link {
  background: none;
  box-shadow: none;
  display: inline;
}
button.cta {
  border-radius: 0.5em;
  padding: 0.75em;
  width: 100%;
}
button.cancel {
  background: none;
  box-shadow: none;
  color: var(--red);
  padding: 0.75em;
  width: 100%;
  margin-top: 1em;
}
button.cancel:hover,
button.cancel:focus {
  text-decoration: underline;
}
[disabled] button, button[disabled] {
  box-shadow: none;
  background-color: var(--light-gray);
  color: gray;
  cursor: not-allowed;
  transform: none;
}

fieldset {
  border: none;
  padding: 0;
}

input, select {
  background-color: var(--bg);
  border: 2px solid var(--light-gray);
  border-radius: 0.5em;
  caret-color: var(--secondary);
  padding: 0.75em 1em;
  width: 100%;
}
input.error, select.error {
  border-color: var(--red);
}
.errorMessage {
  color: var(--red);
  word-break: break-word;
}
input::selection {
  background-color: var(--primary);
  color: #efefef;
}
input:focus {
  box-shadow: 0 0 10em rgba(0, 0, 0, 0.02) inset;
}

code {
  box-shadow: 0 0 3px var(--light-gray) inset;
  border-radius: 5px;
  color: var(--gray);
  padding: 0 0.25em;
}

li {
  padding-bottom: 1em;
}

@media (prefers-color-scheme: dark) {
  :root {
    --gray: #aaa;
    --shadow: #2a2a2a;
    --light-gray: #444;
    --bg: var(--black);
    --fg-bold: var(--white);
  }
  h1, h2, h3, h4, h5, h6 {
    color: var(--white);
  }
  input:focus {
    box-shadow: 0 0 10em rgba(255, 255, 255, 0.02) inset;
  }
}

.space-between {
  align-items: center;
  display: flex;
  justify-content: space-between;
}

.container {
  width: 100%;
  max-width: 33em;
  margin: 0 auto;
  text-align: center;
  padding: 1em;
}

.concept-near {
  color: var(--red);
}

.concept-ethereum {
  color: var(--purple);
}

.account-tag {
  background-color: var(--light-gray);
  padding: 0.25em;
  padding-left: 0.75em;
  border-radius: 1000em;
}
.account-tag:before {
  font-size: 0.8em;
}

.account-with-icon {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  padding-right: 2em !important;
}
.account-with-icon:after {
  background-repeat: no-repeat;
  background-size: contain;
  background-position: center;
  overflow: hidden;
  text-indent: -10em;
  width: 1.4em;
  position: absolute;
  right: 0.25em;
  top: 0;
  bottom: 0;
}
.account-with-icon.reverse {
  padding-right: unset;
  padding-left: 2em !important;
}
.account-with-icon.reverse:after {
  left: 0;
  right: unset;
}
.account-with-icon.ethereum:after {
  content: 'on Ethereum';
  background-image: url(1fa082accad8438e1d07d4f1cb366899);
}
.account-with-icon.near:after {
  content: 'on NEAR';
  background-image: url(ad7717f9a3d45b7c16cf7d09d74ec98a);
}
@media (prefers-color-scheme: dark) {
  .account-with-icon.near:after {
    background-image: url(bafb60b6ff96ef158ce1fca6cef28811);
  }
}
